{
  "name": "weather-alert-backend",
  "version": "3.0.0",
  "description": "Weather Alert System Backend with Scoring Engine",
  "main": "src/functions/*.js",
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.2",
    "@azure/functions": "^4.0.0",
    "axios": "^1.13.2",
    "twilio": "^5.11.2",
    "mssql": "^10.0.2",
    "suncalc": "^1.9.0",
    "date-fns": "^3.3.0",
    "date-fns-tz": "^2.0.0"
  },
  "devDependencies": {
    "azure-functions-core-tools": "^4.x",
    "azurite": "^3.35.0",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "dotenv": "^16.4.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/functions/**/*.js"
    ]
  },
  "keywords": [
    "weather",
    "alerts",
    "azure-functions",
    "scoring-engine",
    "stargazing",
    "aurora"
  ],
  "author": "Weather Alert System",
  "license": "MIT"
}